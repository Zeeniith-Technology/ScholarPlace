        "problem_id": "Q044",
        "metadata": {
            "week": 2,
            "day": 4,
            "topic": "Strings",
            "title": "Anagram Check",
            "difficulty_level": "EASY",
            "difficulty_stars": 2,
            "estimated_time_minutes": 15,
            "category": "DSA",
            "company_tags": [
                "Google",
